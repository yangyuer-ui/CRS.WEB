<!DOCTYPE html>
<html>
<head>
    <title>班车管理</title>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
</head>

<body>

    <h2 style="font-weight:900;margin-left:120px" class="layui-anim layui-anim-scale">路线管理</h2>
    <hr style="height:3px" class="layui-bg-black layui-anim layui-anim-scale">


    <button name="Create" type="button" class="layui-btn layui-btn-sm layui-col-lg-offset1">
        <i class="layui-icon">添加路线</i>
    </button>

    <div class="layui-inline">
        <label class="layui-form-label">路线名</label>
        <div class="layui-input-inline" style="width: 200px;">
            <input type="text" name="" autocomplete="off" class="layui-input">
        </div>
        <button type="button" class="layui-btn layui-btn-sm" style="margin-left:10px"><i class="layui-icon layui-icon-search">查询</i></button>
    </div>

    <table class="layui-table " id="PathData" lay-filter="test"></table>

    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">查看</a>
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    </script>


    <script>
        layui.use(['laypage', 'layer', 'table', 'element', 'jquery'], function () {
            var laypage = layui.laypage //分页
                , layer = layui.layer //弹层
                , table = layui.table //表格
                , element = layui.element //元素操作
                , $ = layui.jquery;

            //第一个实例
            function getAll() {
                table.render({
                    elem: '#PathData'
                    , height: 550
                    , url: "/Path/PathData" //数据接口
                    , title: '用户表'
                    , toolbar: 'default' //开启工具栏，此处显示默认图标，可以自定义模板，详见文档
                    , cols: [[ //表头
                        { type: 'checkbox', fixed: 'left' }
                        , { field: 'ID', title: 'ID' }
                        , { field: 'PathName', title: '路线名' }
                        , { field: 'StartPlace', title: '起点站' }
                        , { field: 'EndPlace', title: '终点站', sort: true }
                        , { field: 'Status', title: '状态', sort: true }
                        , { fixed: 'right', width: 165, align: 'center', toolbar: '#barDemo' }
                    ]],
                    done: function (res, curr, count) {
                        $("[data-field='Status']").children().each(function () {
                            if ($(this).text() == '1') {
                                $(this).text("正在运行")
                            } else if ($(this).text() == '0') {
                                $(this).text("暂停运行")
                            }
                        });
                        pageCurr = curr;
                    }
                    , page: true//开启分页
                });


            }

            getAll()
            table.on('toolbar(test)', function (obj) {
                var checkStatus = table.checkStatus(obj.config.id)
                    , data = checkStatus.data; //获取选中的数据
                switch (obj.event) {
                    case 'add':
                        layer.msg('添加');
                        break;
                    case 'update':
                        if (data.length === 0) {
                            layer.msg('请选择一行');
                        } else if (data.length > 1) {
                            layer.msg('只能同时编辑一个');
                        } else {
                            layer.alert('编辑 [id]：' + checkStatus.data[0].id);
                        }
                        break;
                    case 'delete':
                        if (data.length === 0) {
                            layer.msg('请选择一行');
                        } else {
                            layer.msg('删除');
                        }
                        break;
                };
            });

            //监听行工具事件
            table.on('tool(test)', function (obj) { //注：tool 是工具条事件名，test 是 table 原始容器的属性 lay-filter="对应的值"
                var id = obj.data.ID//获得当前行数据
                    , layEvent = obj.event; //获得 lay-event 对应的值
                if (layEvent === 'detail') {
                    layer.msg('查看操作');
                } else if (layEvent === 'del') {
                    layer.confirm('确定删除行么', {
                        icon: 3, title: '系统提示'
                    },
                        function (index) {
                            $.ajax({//ajax回传数据删除
                                type: "POST",
                                url: "/Path/Delete",
                                data: { id: id },
                                success: function (msg) {
                                    getAll();
                                }
                            });
                            layer.msg("删除成功", {
                                icon: 6
                            })
                            //obj.del(); //删除对应行（tr）的DOM结构
                            layer.close(index);
                            //向服务端发送删除指令

                            getAll()
                        });
                } else if (layEvent === 'edit') {
                    layer.open({
                        type: 2,
                        area: ['600px', '500px'],
                        title: "编辑用户信息",
                        content: '/Path/Edit?id=' + id,
                        end: function () {
                            getAll()
                        }
                    });
                }
            });

            $('[name=Create]').click(function () {
                layer.open({
                    title: '在此处添加用户信息',
                    type: 2,
                    area: ['600px', '500px'],
                    shade: 0.8,
                    fixed: false, //不固定
                    maxmin: false,
                    content: '/Path/Create',
                    end: function () {
                        getAll()
                    }
                });
            })
        });
    </script>
</body>
</html>