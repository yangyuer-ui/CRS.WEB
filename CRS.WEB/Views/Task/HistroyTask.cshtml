<!DOCTYPE html>
<html>
<head>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
</head>

<body>

    <h2 style="font-weight:900;margin-left:120px" class="layui-anim layui-anim-scale">查询任务任务</h2>
    <hr style="height:3px" class="layui-bg-black layui-anim layui-anim-scale">
    <table class="layui-table " id="taskData" lay-filter="test"></table>
    <script>
        layui.use(['laypage', 'layer', 'table', 'element', 'jquery'], function () {
            var laypage = layui.laypage //分页
                , layer = layui.layer //弹层
                , table = layui.table //表格
                , element = layui.element //元素操作
                , $ = layui.jquery;

            //第一个实例
            function getAll() {
                table.render({
                    elem: '#taskData'
                    , height: 550
                    , url: "/Task/HistroyTaskData" //数据接口
                    , title: '查询任务'
                    , toolbar: 'default' //开启工具栏，此处显示默认图标，可以自定义模板，详见文档
                    , cols: [[ //表头
                        { type: 'checkbox', fixed: 'left' }
                        , { field: 'ID', title: 'ID' }
                        , { field: 'Car', title: '车号' }
                        , { field: 'Driver', title: '发车司机' }
                        , { field: 'Path', title: '路线', sort: true }
                        , { field: 'ResidueSeating', title: '剩余座次', sort: true }
                        , { field: 'StartTime', title: '发车时间', sort: true }
                    ]],
                    done: function (res, curr, count) {
                        pageCurr = curr;
                    }
                    , page: true//开启分页
                });
            }
            getAll()
        });
    </script>
</body>
</html>